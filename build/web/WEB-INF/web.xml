<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginNeeded</servlet-name>
        <servlet-class>sessionManagement.LoginNeeded</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>sessionManagement.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutNeeded</servlet-name>
        <servlet-class>sessionManagement.LogoutNeeded</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAccount</servlet-name>
        <servlet-class>dbConnections.ViewAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferMoney</servlet-name>
        <servlet-class>sessionManagement.TransferMoney</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessMoneyTransfer</servlet-name>
        <servlet-class>dbConnections.ProcessMoneyTransfer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoanApply</servlet-name>
        <servlet-class>sessionManagement.LoanApply</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoanRegister</servlet-name>
        <servlet-class>dbConnections.LoanRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoanStatus</servlet-name>
        <servlet-class>sessionManagement.LoanStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoanDetailsDisplay</servlet-name>
        <servlet-class>dbConnections.LoanDetailsDisplay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginNeeded</servlet-name>
        <url-pattern>/LoginNeeded</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutNeeded</servlet-name>
        <url-pattern>/LogoutNeeded</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAccount</servlet-name>
        <url-pattern>/ViewAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferMoney</servlet-name>
        <url-pattern>/TransferMoney</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessMoneyTransfer</servlet-name>
        <url-pattern>/ProcessMoneyTransfer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoanApply</servlet-name>
        <url-pattern>/LoanApply</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoanRegister</servlet-name>
        <url-pattern>/LoanRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoanStatus</servlet-name>
        <url-pattern>/LoanStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoanDetailsDisplay</servlet-name>
        <url-pattern>/LoanDetailsDisplay</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
